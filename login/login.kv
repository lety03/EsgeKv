# LoginWindow:

<LoginWindow>:
    GridLayout:
        cols:1
        BoxLayout:
            orientation:'vertical'
            Label:
                text:'Bem vindo(a) ao ESGE'
                font_size:'18sp'
                id:msg

        GridLayout:
            rows: 3
            cols: 2
            size_hint_y: 1 
            padding: 10
            spacing: 15
            Label:
                text: 'Nome'
                font_size:'14sp'
                size_hint_x:0.4
            TextInput:
                id: nome
                size_hint_y: None 
                size: '50dp','30dp'
            Label:
                text: 'senha'
                font_size:'14sp'
                size_hint_x:0.4
            TextInput:
                id: senha
                password: True
                size_hint_y: None 
                size: '50dp','30dp'
        BoxLayout:
            orientation:'vertical'
            spacing: 15
            index:1
            MDRoundFlatButton:
                pos_hint:{'center_x': 0.5}
                text: 'Entrar'
                size_hint_y: None
                size: '80dp','40dp'
                size_hint_x: .5
                size_hint_min_x: .3
                on_release: root.Acessar()
            MDRoundFlatButton:
                pos_hint:{'center_x': 0.5}
                size_hint_y: None
                size_hint_x: .5
                size_hint_min_x: .4
                size: '80dp','40dp'
                text: 'Criar conta'
        BoxLayout:
            orientation:'vertical'
        # GridLayout:
            # Button:
            #     text: 'Go to menu'
            #     pos_hint:{'center_x': 0.5}
            #     size_hint: .5, .4
            #     on_press: root.manager.current = 'menu'
<HomeWindow>:
    BoxLayout:
        orientation:'vertical'
        size_hint_y: 0.2
        # size_hint_min_y:0.2
        # index:1
        pos_hint: {'x':0, 'y': .8}
        Label:
            id: BLHome
            text:'Home'       
    GridLayout:
        rows:3
        cols:1
        size_hint_y: 0.6
        size_hint_x: 0.8
        # index:2
        pos_hint: {'x':.099, 'y': .2}
        spacing: '10dp'
        # size_hint_min_y:2
        # Button:
        #     text: 'Deslogar'
        #     font_size:'10sp'
        #     on_press: root.manager.current = 'login'
        MDRectangleFlatButton:
            text: 'Ver items'
            font_size:'15sp'
            size_hint: 1,.3
            on_press:
                root.manager.transition.direction = "left" 
                root.manager.current = 'AlterarProduto'
        MDRectangleFlatButton:
            text: 'Buscar'
            font_size:'15sp'
            size_hint: 1,.3
            on_press: 
                root.manager.current = 'BuscarProduto'
                root.manager.transition.direction = "left"
        MDRectangleFlatButton:
            text: 'Cadastrar'
            font_size:'15sp'
            size_hint: 1,.3
            on_press: 
                root.manager.current = 'CadastroProduto'
                root.manager.transition.direction = "left"
<CadastroProdutoWindow>:
    # GridLayout:
    #     cols:1
    #     rows: 2
    #     size_hint: 1,1
        # pos_hint:{'top': 0.09}       
    BoxLayout:
        orientation:'vertical'
        size_hint_y: 0.25
        pos_hint: {'x':0, 'y': .77}
        Label:
            text:'Cadastro de items'
    GridLayout:
        # pos: '200dp','200dp'
        rows: 8
        cols: 1
        size_hint_y: 0.7
        size_hint_x: 0.85
        pos_hint: {'x':.099, 'y': .16}
        padding: 10
        spacing: 15
        Label:
            text: 'Nome'
            font_size:'14sp'
            size_hint_x:0.6
        TextInput:
            id: nomeProduto
        Label:
            text: 'Quantidade Ideal'
            font_size:'14sp'
            size_hint_x:0.6
        TextInput:
            id: quantidadeIdeal
        Label:
            text: 'Quantidade Atual'
            font_size:'14sp'
            size_hint_x:0.6
        TextInput:
            id: quantidadeAtual
        MDRoundFlatButton:
            pos_hint:{'center_x': 0.5}
            size_hint: .5, .5
            text: 'Cadastrar'
            on_press: root.DeletarWid()
        MDRoundFlatButton:
            pos_hint:{'center_x': 0.5}
            size_hint: .5, .5
            text: 'Voltar'
            on_press: 
                root.manager.current = 'home'
                root.manager.transition.direction = "right"
<LoginAlterarProdutoWindow>:
    MDIconButton:
        text: 'Voltar'
        icon: 'arrow-u-left-top-bold'
        theme_text_color: "Custom"
        text_color: app.theme_cls.primary_color
        size_hint: .1, .15
        pos_hint:{'center_x': 0.11}
        on_release:
            root.manager.transition.direction = "right"
            root.manager.current = 'home'
    MDIconButton:
        text: 'buscar'
        icon: 'store-search'
        theme_text_color: "Custom"
        text_color: app.theme_cls.primary_color
        size_hint: .1, .15
        pos_hint:{'center_y': .15, 'center_x': .11}
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = 'BuscarProduto'

<BuscarProdutoWindow>:
    FloatLayout:
        BoxLayout:
            orientation:'vertical'
            pos_hint:{'center_y': .899}
            Label:
                text:'Busca de items'
        BoxLayout:
            orientation:'horizontal'
            size_hint_y: .05
            size_hint_x: .89
            pos_hint:{'center_y': .799, 'center_x': .53}
            TextInput:
                id:itemBusca
                size_hint_y: None
                size: '30dp', '30dp'
            MDIconButton:
                icon: 'store-search'
                on_press:
                    root.LimparGrid()
                on_release:
                    root.ExibirProduto()
                    
        
        BoxLayout:
            orientation:'vertical'
            MDIconButton:
                text: 'Voltar'
                icon: 'arrow-u-left-top-bold'
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                # size_hint: .1, .15
                pos_hint:{'center_y': .08, 'center_x': .06}
                on_press: 
                    root.manager.transition.direction = "right"
                    root.manager.current = 'AlterarProduto'